<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zx.system.dao.SysRoleDao">

    <!--实体映射-->
    <resultMap id="base_result_map" type="SysRole">
        <id column="id" property="id"/>
        <result column="rolename" property="rolename"/>
        <result column="roletype" property="roletype"/>
        <result column="createrid" property="createrid"/>
        <result column="createtime" property="createtime"/>
        <result column="state" property="state"/>
        <result column="remark" property="remark"/>
        <collection property="modules" ofType="SysModule" column="id"
                    select="selectModulesByRoleId"/>
    </resultMap>

    <select id="selectModulesByRoleId" resultType="SysModule">
        SELECT * FROM sys_modules WHERE mcode in (
          SELECT mcode FROM sys_rolemodules WHERE roleid = #{id}
        ) and state!=-1
    </select>

    <!-- 通用查询结果列 -->
    <sql id="base_column_list">
		 id,rolename,roletype,createrid,createtime,state,remark
	</sql>

    <sql id="base_condition_filed">
        <if test="id != null">
            and id = #{id}
        </if>
        <if test="rolename != null and rolename!=''">
            and rolename = #{rolename}
        </if>
        <if test="roletype != null">
            and roletype = #{roletype}
        </if>
        <if test="createrid != null">
            and createrid = #{createrid}
        </if>
        <if test="createtime != null">
            and createtime = #{createtime}
        </if>
        <if test="state != null">
            and state = #{state}
        </if>
        <if test="remark != null and remark!=''">
            and remark = #{remark}
        </if>
    </sql>

    <!-- 通用查询条件列-->
    <sql id="query_condition">
        <where>
            <trim prefixOverrides="and">
                <include refid="base_condition_filed"/>
                <if test="rolenameFuzzy!= null  and rolenameFuzzy!=''">
                    and rolename like concat('%', #{rolenameFuzzy}, '%')
                </if>
                <if test="createtimeStart!= null and createtimeStart!=''">
                    <![CDATA[ and  createtime>=str_to_date('${createtimeStart}', '%Y-%m-%d') ]]>
                </if>
                <if test="createtimeEnd!= null and createtimeEnd!=''">
                    <![CDATA[ and  createtime< date_sub(str_to_date('${createtimeEnd}','%Y-%m-%d'),interval -1 day) ]]>
                </if>
                <if test="remarkFuzzy!= null  and remarkFuzzy!=''">
                    and remark like concat('%', #{remarkFuzzy}, '%')
                </if>
            </trim>
        </where>
    </sql>

    <!-- 查询集合-->
    <select id="selectList" resultMap="base_result_map">
        SELECT
        <include refid="base_column_list"/>
        FROM sys_roles
        <include refid="query_condition"/>
        <if test="orderBy!=null">
            order by ${orderBy}
        </if>
        <if test="start!=null and pageSize!=null">
            limit #{start},#{pageSize}
        </if>
    </select>

    <!-- 查询数量-->
    <select id="selectCount" resultType="java.lang.Integer">
        SELECT count(1) FROM sys_roles
        <include refid="query_condition"/>
    </select>

    <!-- 插入 （匹配有值的字段）-->
    <insert id="insert" parameterType="SysRole">
        <selectKey keyProperty="id" resultType="java.lang.Integer" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO sys_roles
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="rolename != null">
                rolename,
            </if>
            <if test="roletype != null">
                roletype,
            </if>
            <if test="createrid != null">
                createrid,
            </if>
            <if test="createtime != null">
                createtime,
            </if>
            <if test="state != null">
                state,
            </if>
            <if test="remark != null">
                remark,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="rolename!=null">
                #{rolename},
            </if>
            <if test="roletype!=null">
                #{roletype},
            </if>
            <if test="createrid!=null">
                #{createrid},
            </if>
            <if test="createtime!=null">
                #{createtime},
            </if>
            <if test="state!=null">
                #{state},
            </if>
            <if test="remark!=null">
                #{remark},
            </if>
        </trim>
    </insert>

    <!-- 插入或者更新 （匹配有值的字段）-->
    <insert id="insertOrUpdate" parameterType="SysRole">
        INSERT INTO sys_roles
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="rolename != null">
                rolename,
            </if>
            <if test="roletype != null">
                roletype,
            </if>
            <if test="createrid != null">
                createrid,
            </if>
            <if test="createtime != null">
                createtime,
            </if>
            <if test="state != null">
                state,
            </if>
            <if test="remark != null">
                remark,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id!=null">
                #{id},
            </if>
            <if test="rolename!=null">
                #{rolename},
            </if>
            <if test="roletype!=null">
                #{roletype},
            </if>
            <if test="createrid!=null">
                #{createrid},
            </if>
            <if test="createtime!=null">
                #{createtime},
            </if>
            <if test="state!=null">
                #{state},
            </if>
            <if test="remark!=null">
                #{remark},
            </if>
        </trim>
        on DUPLICATE key
        <trim prefix="" suffix="" suffixOverrides=",">
            <if test="rolename!=null">
                rolename = VALUES(rolename),
            </if>
            <if test="roletype!=null">
                roletype = VALUES(roletype),
            </if>
            <if test="createrid!=null">
                createrid = VALUES(createrid),
            </if>
            <if test="createtime!=null">
                createtime = VALUES(createtime),
            </if>
            <if test="state!=null">
                state = VALUES(state),
            </if>
            <if test="remark!=null">
                remark = VALUES(remark),
            </if>
        </trim>
    </insert>

    <!-- 添加 （批量插入）-->
    <insert id="insertBatch" parameterType="SysRole">
        INSERT INTO sys_roles(rolename,roletype,createrid,createtime,state,remark)values
        <foreach collection="list" item="item" separator=",">
            (
            #{item.rolename},#{item.roletype},#{item.createrid},#{item.createtime},#{item.state},#{item.remark}
            )
        </foreach>
    </insert>

    <!-- 根据Id修改-->
    <update id="update" parameterType="SysRole">
        UPDATE sys_roles
        <set>
            <if test="rolename != null">
                rolename = #{rolename},
            </if>
            <if test="roletype != null">
                roletype = #{roletype},
            </if>
            <if test="createrid != null">
                createrid = #{createrid},
            </if>
            <if test="createtime != null">
                createtime = #{createtime},
            </if>
            <if test="state != null">
                state = #{state},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
        </set>
        where id=#{id}
    </update>

    <!-- 根据Id删除-->
    <delete id="deleteById">
		delete from sys_roles where id=#{id}
	</delete>

    <!-- 根据PrimaryKey获取对象-->
    <select id="selectById" resultMap="base_result_map">
        select
        <include refid="base_column_list"/>
        from sys_roles where id=#{id}
    </select>

